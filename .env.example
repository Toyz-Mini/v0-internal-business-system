# =================================
# SUPABASE CONFIGURATION (Required)
# =================================
# Get these values from your Supabase project settings
# Dashboard: https://app.supabase.com/project/YOUR_PROJECT/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# =================================
# APPLICATION ENVIRONMENT
# =================================
# Options: development | production | test
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# =================================
# DEPLOYMENT CONFIGURATION
# =================================
# Vercel automatically populates these in production
# No action needed for Vercel deployments
VERCEL_URL=
VERCEL_ENV=
GIT_COMMIT_SHA=

# =================================
# STORAGE CONFIGURATION
# =================================
# Supabase Storage bucket for product images
# Create this bucket in Supabase Dashboard > Storage
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=product-images

# =================================
# OPTIONAL: WEBHOOK INTEGRATION
# =================================
# Configure webhooks for external integrations
# - Order notifications
# - Inventory alerts
# - Custom automations
WEBHOOK_URL=
WEBHOOK_SECRET=

# =================================
# OPTIONAL: PRINTER CONFIGURATION
# =================================
# Network printer settings for receipt printing
# Leave empty to use browser printing
PRINTER_IP=
PRINTER_PORT=9100

# =================================
# OPTIONAL: FEATURE FLAGS
# =================================
# Enable/disable specific features
NEXT_PUBLIC_ENABLE_CAMERA_ATTENDANCE=true
NEXT_PUBLIC_ENABLE_STOCK_COUNTS=true
NEXT_PUBLIC_ENABLE_PURCHASE_ORDERS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# =================================
# OPTIONAL: ANALYTICS & MONITORING
# =================================
# Vercel Analytics (automatically enabled on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# =================================
# OPTIONAL: RATE LIMITING
# =================================
# API rate limit configuration (requests per minute)
# Default values are used if not specified
API_RATE_LIMIT_RPM=60
AUTH_RATE_LIMIT_RPM=10

# =================================
# NOTES
# =================================
# 1. Copy this file to .env.local for local development
# 2. Never commit .env.local or .env with real values
# 3. In production (Vercel), add these in Project Settings > Environment Variables
# 4. Required variables: NEXT_PUBLIC_SUPABASE_URL, NEXT_PUBLIC_SUPABASE_ANON_KEY
# 5. All NEXT_PUBLIC_* variables are exposed to the browser
